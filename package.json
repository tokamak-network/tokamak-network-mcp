{
  "name": "tnm",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": ["frontend"],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:frontend": "bun run --cwd frontend build",
    "build:all": "bun run build && bun run build:frontend",
    "start": "bun run dist/index.js",
    "dev:frontend": "bun run --cwd frontend dev"
  },
  "dependencies": {
    "@elysiajs/static": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "elysia": "^1.0.0",
    "open": "^10.0.0",
    "viem": "^2.39.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
